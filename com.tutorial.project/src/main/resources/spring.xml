<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="client" class="com.tutorial.project.Client">
	      <constructor-arg index="0" value="1" />
	      <constructor-arg value = "Sam"/>
	</bean>
	
	<bean id="app" class="com.tutorial.project.App">
	      <constructor-arg ref="client" />
	      <constructor-arg ref="eventLogger"/>     
	</bean>
	
	<bean id = "event" class = "com.tutorial.project.Event" scope="prototype">
	      <constructor-arg>
	            <bean class = "java.util.Date"/>
	      </constructor-arg>
          <constructor-arg  ref="dateFormat"/>
	</bean>
	
	<!-- using factory-method we invoke static method to create an object -->
	<bean id = "dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"></bean>
		
	<import resource="loggers.xml"/>	
</beans>
	
	
	
	