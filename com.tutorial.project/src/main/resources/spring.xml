<?xml version="1.0" encoding="UTF-8"?>
<beans 
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:c="http://www.springframework.org/schema/c"
    xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-3.2.xsd">
        
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:client.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true" />
        <property name="systemPropertiesMode"/>
    </bean>
    
    <util:map id="loggerMap">
	     <entry key="INFO" value-ref="consoleEventLogger"/>
	     <entry key="ERROR" value-ref="combinedEventLogger"/>
    </util:map>

	<bean id="client" class="com.tutorial.project.Client" 
	      p:greeting="${greeting}">
	      <constructor-arg index="0" value="${id}" />
	      <constructor-arg value = "${name}"/>
	</bean>
	
	<bean id="app" class="com.tutorial.project.App">
	      <constructor-arg ref="client"/>
	      <constructor-arg ref="cacheFileEventLogger"/>
	      <constructor-arg ref="loggerMap"/>    
	</bean>
	
	<bean id = "event" class = "com.tutorial.project.Event" scope="prototype">
	      <constructor-arg>
	            <bean class = "java.util.Date"/>
	      </constructor-arg>
          <constructor-arg  ref="dateFormat"/>
	</bean>
	
	<!-- using factory-method we invoke static method to create an object -->
	<bean id = "dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"></bean>
	
	<bean id="monitor" class="com.tutorial.project.Monitor"/>
	<bean id="awared" class="com.tutorial.project.AwareBean" init-method="init"/>
		
	<import resource="loggers.xml"/>
		
</beans>
	
	
	
	